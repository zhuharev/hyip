<form action="" method="post">
  <div class="form-group">
    <label for="title">Заголовок</label>
    <input class="form-control" type="text" name="title" id="title" placeholder="Заголовок" value="{{.page.Title}}">
  </div>
  <div class="form-group">
    <label for="body">Текст</label>
    <textarea class="form-control" name="body" rows="20">{{.page.Body}}</textarea>
  </div>
  <button class="btn btn-primary">Сохранить</button>
</form>
